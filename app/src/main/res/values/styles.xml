<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_subPeopleFragments" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="style_title_toolbar">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="page_title">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">@color/second_white</item>
    </style>

    <style name="InterRegularTextAppearance">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/purple</item>
        <item name="backgroundTint">@color/main</item>
    </style>


    <style name="countries">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/second_white</item>
    </style>

    <style name="icon_text">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/purple</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/purple</item>
        <item name="colorSwitchThumbNormal">@color/second_white</item>
        <item name="android:colorForeground">@color/main</item>
    </style>

    <style name="forID">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">8sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">@color/second_white</item>
    </style>

    <style name="round_corner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="round_image">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CornerImageStyle" parent="">
        <item name="cornerSize">4dp</item>
    </style>

    <style name="textAboutStyle">
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:translationY">-0.74sp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="TextCounterEditStyle">
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:translationY">-0.74sp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="TextEditAboutStyle">
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:translationY">-2.32sp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textColor">@color/second_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="Theme.BackArrow" parent="android:Theme.Holo">
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back</item>
    </style>

</resources>